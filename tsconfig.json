{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es2015",
    "module": "es2015",
    "declarationDir": "./dist/types",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*", "node_modules/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "test", "**/demo"]
}
